.row.proximos-viajes
  each travel in travels 
    .col-md-6.col-lg-4.mb-4 
      .card 
        img.card-img-top(src=`img/destinos_${travel.imagen}.jpg`)
        .card-body 
          h3= travel.titulo
          p 
            svg(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' style='fill: #DA0037;transform: ;msFilter:;')
              path(d='M7 11h2v2H7zm0 4h2v2H7zm4-4h2v2h-2zm0 4h2v2h-2zm4-4h2v2h-2zm0 4h2v2h-2z')
              path(d='M5 22h14c1.103 0 2-.897 2-2V6c0-1.103-.897-2-2-2h-2V2h-2v2H9V2H7v2H5c-1.103 0-2 .897-2 2v14c0 1.103.897 2 2 2zM19 8l.001 12H5V8h14z')

            |  #{travel.fecha_ida} - #{travel.fecha_vuelta}
          p 
            svg(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' style='fill: #DA0037;transform: ;msFilter:;')
              path(d='M7.5 6.5C7.5 8.981 9.519 11 12 11s4.5-2.019 4.5-4.5S14.481 2 12 2 7.5 4.019 7.5 6.5zM20 21h1v-1c0-3.859-3.141-7-7-7h-4c-3.86 0-7 3.141-7 7v1h17z')

            |  #{travel.disponibles} Available

          p= travel.descripcion.substr(0, 100) + "..." 

          a(href=`travels/${travel.slug}`, class="btn btn-success btn-block") More Information
