extends ./layout/index

block content 
  main.container.mt-5 
    h1.text-center.mt-5 #{page}

    blockquote.text-center Read about ours clientes and their experiences
      include ./layout/block_testimonials
      .col-md-12
        h2.d-block.w-100.text-center Add a testimonial

        if(errors)
          each error in errors
            .alert.col.alert-danger.text-center= error.message

        .row.justify-content-center.col
          .col-md-8 
            form(action="/testimonials" method="POST")
              .form-group 
                label(for="name") Name 
                input#name(type="text", placeholder="Your Name", name="name", class="form-control", value= name)

              .form-group 
                label(for="email") Email 
                input#name(type="text", placeholder="Your Email", name="email", class="form-control", value=email)
              .form-group
                label(for="message") Message
                textarea#message(name="message", placeholder="Your Message", rows="3", class="form-control")= message

              button.btn.btn-success.btn-block(type="submit") Send testimonial